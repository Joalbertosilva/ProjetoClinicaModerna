                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="cadastreseButton" layoutX="129.0" layoutY="324.0" mnemonicParsing="false" onAction="#onCadastrarButtonClick" prefHeight="52.0" prefWidth="198.0" style="-fx-background-color: #d7b986; -fx-background-radius: 10; -fx-cursor: hand;" text="Cadastre-se" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Label layoutX="178.0" layoutY="68.0" text="Login" textFill="WHITE">
               <font>
                  <Font name="Arial Bold Italic" size="37.0" />
               </font>
            </Label>

            <!-- Mensagem de erro com borda vermelha para os campos -->
         </children>
      </AnchorPane>

      <AnchorPane prefHeight="506.0" prefWidth="229.0" style="-fx-background-color: #C4AB6F; -fx-background-radius: 15; ">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="18.0" layoutY="162.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@nova-logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>

      <ImageView fitHeight="43.0" fitWidth="50.0" layoutX="636.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@imagemAvatar.png" />
         </image>
      </ImageView>
   </children>
