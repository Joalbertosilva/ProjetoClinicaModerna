<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="495.0" prefWidth="694.0" style="-fx-background-color: #9F7E4A; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetoclinicadeestetica.HelloController">
   <children>
      <AnchorPane layoutX="237.0" layoutY="60.0" prefHeight="411.0" prefWidth="442.0" style="-fx-background-color: transparent; -fx-background-radius: 15;">
         <children>
            <Label layoutX="39.0" layoutY="140.0" text="Email: " textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" layoutX="89.0" layoutY="139.0" opacity="0.22" prefHeight="26.0" prefWidth="336.0" style="-fx-background-radius: 10; -fx-cursor: hand;" />
            <Label layoutX="37.0" layoutY="187.0" text="Senha: " textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="senhaField" layoutX="89.0" layoutY="186.0" opacity="0.31" prefHeight="26.0" prefWidth="336.0" style="-fx-background-radius: 10; -fx-cursor: hand;" />
            <Hyperlink layoutX="317.0" layoutY="213.0" text="esqueceu a senha" textFill="#36748e">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Hyperlink>
            <Label fx:id="feedbackLabel" layoutX="89.0" layoutY="215.0" text="Email ou senha incorretos!" textFill="red" visible="false">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="entrarButton" layoutX="182.0" layoutY="247.0" mnemonicParsing="false" onAction="#onEntrarButtonClick" prefHeight="52.0" prefWidth="93.0" style="-fx-background-color: #d7b986; -fx-background-radius: 10; -fx-cursor: hand;" text="Entrar" textFill="#f2f2f2">
